Task no 1

#include <iostream>
using namespace std;

int main() {
    int arr[8] = {10, 20, 30, 40, 50, 60, 70, 80};
    int size = 8;
    cout << "Original array: ";
    for (int i = 0; i < size; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;
    for (int i = 0; i < size - 1; i++) {
        arr[i] = arr[i + 1];
    }
    size--;
    cout << "Array after deleting first and last elements: ";
    for (int i = 0; i < size; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;
    return 0;
}
